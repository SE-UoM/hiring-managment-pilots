# PostgreSQL Database Credentials for Docker container configuration
# These are used by the 'db' service in docker-compose.yml
POSTGRES_DB=hiringmanager_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# PostgreSQL Connection URL for the Spring Boot Application
# This will be injected into the 'app' container. It can be different from the above.
# For example, in production, this might point to a cloud database.
DB_URL=jdbc:postgresql://db:5432/hiringmanager_db
DB_USERNAME=postgres
DB_PASSWORD=password